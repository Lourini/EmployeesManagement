<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Dialog id="idDelete" title="{i18n>deleteconfirmation}"  class="sapUiContentPadding">
		<Text text="Are you sure to delete Employee ? " />
		<beginButton>
			<Button type="Emphasized"  text="{i18n>confirm}" press="onDelete" />
		</beginButton>
		<endButton>
			<Button  text="{i18n>close}" press="onCloseDelete" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>